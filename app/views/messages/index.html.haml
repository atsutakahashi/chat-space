.notification
  %p チャットグループが作成されました

.chat-side
  .chat-side__user
    .chat-side__user-content
      .chat-side__user-name name
      = link_to do
        %i.fa.fa-pencil-square-o
      = link_to do
        %i.fa.fa-cog
  .chat-side__groups
    %h1 groups
    %h2 まだメッセージはありません

.chat-main
  .chat-main__header
    .chat-main__header--group-edit-btn
      = button_tag "Edit"
    %h3 sampleグループ
    %h4 member
  .chat-main__body
    %span.username name
    %span 2017/12/26
    %h6 text
  .chat-main__footer
    .chat-main__footer-body
      %form.form
        %input.text{placeholder: "type a message"}
        %i.fa.fa-picture-o
        = button_tag "Send"